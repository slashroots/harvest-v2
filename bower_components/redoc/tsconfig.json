{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "es6",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": true,
		"outDir": ".tmp/lib",
		"pretty": true,
		"moduleResolution": "node",
		"types": [
			"core-js",
			"jasmine",
			"should",
			"requirejs"
		],
		"noEmitHelpers": true
	},
	"compileOnSave": false,

	"exclude": [
    "node_modules",
    ".tmp"
  ],
	"awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  }
}
